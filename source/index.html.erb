<script type="text/javascript"> //Set up an associative array
//The keys represent the size of the letter
//The values represent the cost of the letter i.e A 10" letter cost's $35
//


// getcountryPrice() finds the price based on the country of the letter.
// Here, we need to take user's the selection from selection list
function getcountryPrice() {
  var countrySelect = document.getElementById('country');

  if (countrySelect.value === "World")
    letter_prices["Gram250"] = 5;
    // letter_prices["Gram2000"] = 6;
  else
    letter_prices["Gram250"] = 4;
    // letter_prices["Gram2000"] = 5;
  //alert(country_prices[countrySelect.value]);
  return country_prices[countrySelect.value];
}

var letter_prices = new Array();
letter_prices["Gram20"]=1;
letter_prices["Gram50"]=2;
letter_prices["Gram100"]=3;
letter_prices["Gram250"]=4;
letter_prices["Gram2000"]=5;


//Set up an associative array 
//The keys represent the country type
//The value represents the cost of the country i.e. Lemon country is $5,Dobash country is $9
//We use this this array when the user selects a country from the form
var country_prices = new Array();
country_prices["None"]=0;
country_prices["Netherlands"]=0.73;
country_prices["World"]=1.25 ;

// getletterSizePrice() finds the price based on the size of the letter.
// Here, we need to take user's the selection from radio button selection
function getletterSizePrice() {
  var letterRadio = document.getElementsByName('selectedletter');

  for (i=0; i < letterRadio.length; i++) {
    if (letterRadio[i].checked) {
      user_input = letterRadio[i].value;
    }
  }
  return letter_prices[user_input];
}



function calculateTotal() {
  var total = getletterSizePrice() * getcountryPrice();
  var totalEl = document.getElementById('totalPrice');

  document.getElementById('totalPrice').innerHTML = "Your Total is: € " + total;
  totalEl.style.display = 'block';
}

function hideTotal() {
  var totalEl = document.getElementById('totalPrice');
  totalEl.style.display = 'none';
}
</script>
</body>